<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/for_using_weight"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/columb" />

        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/denmark" />

        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/italy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/flag_size"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/madagaskar" />

        <ImageView
            android:id="@+id/on_grid_activity"
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/ost" />

        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/poland" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/for_using_weight"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/sw" />

        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/tai" />

        <ImageView
            android:layout_width="@dimen/for_using_weight"
            android:layout_height="@dimen/flag_size"
            android:layout_weight="@integer/material_motion_duration_long_1"
            app:srcCompat="@drawable/uk" />
    </LinearLayout>


</LinearLayout>